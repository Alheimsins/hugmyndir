    "choo": "7.1.0",
    "choo-persist": "3.0.2",
    "choo-service-worker": "3.0.0",
    "dom-autofocus": "2.0.0",
    "gun": "0.2020.301",
    "sheetify": "8.0.0",
    "tachyons": "4.11.1"
  },
  "devDependencies": {
    "ava": "3.5.0",
    "bankai": "9.15.3",
    "choo-devtools": "3.0.4",
